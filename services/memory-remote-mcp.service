[Unit]
Description=Memory MCP Remote Server - FastMCP HTTP/SSE transport
After=network.target redis.service
Wants=redis.service

[Service]
Type=simple
User=lj
Group=lj
WorkingDirectory=/home/lj/haivemind-mcp-server
Environment=PYTHONPATH=/home/lj/haivemind-mcp-server/src
ExecStart=/home/lj/haivemind-mcp-server/venv/bin/python /home/lj/haivemind-mcp-server/src/remote_mcp_server.py --host 0.0.0.0 --port 8900
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=false
ReadWritePaths=/home/lj/haivemind-mcp-server/data
PrivateTmp=true

[Install]
WantedBy=multi-user.target