# hAIveMind Environment Variables
# Copy this file to .env and set your actual values

# COMET Authentication
# Password for COMET AI portal authentication
# Keep this secure - provides access to AI directives and memory search
COMET_AUTH_PASSWORD=your-secure-password-here

# Security Tokens
# JWT secret for session management (change in production)
HAIVEMIND_JWT_SECRET=change-this-secret-key

# API Tokens for different access levels
HAIVEMIND_ADMIN_TOKEN=your-admin-token-here
HAIVEMIND_READONLY_TOKEN=your-readonly-token-here
HAIVEMIND_AGENT_TOKEN=your-agent-token-here

# External Integration Tokens (optional - only if connectors enabled)
# CONFLUENCE_API_TOKEN=your-confluence-token
# JIRA_API_TOKEN=your-jira-token
