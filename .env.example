# hAIveMind Environment Variables
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control

# COMET Authentication
# Required for COMET AI browser portal authentication
COMET_AUTH_PASSWORD=your-secure-password-here

# JWT Authentication
# Secret key for JWT token generation
HAIVEMIND_JWT_SECRET=your-secret-key-here

# Admin API Token
# Token for administrative API access
HAIVEMIND_ADMIN_TOKEN=your-admin-token-here

# External Integrations
# Confluence API token for documentation sync
CONFLUENCE_API_TOKEN=your-confluence-token-here

# Jira API token for issue tracking integration
JIRA_API_TOKEN=your-jira-token-here
