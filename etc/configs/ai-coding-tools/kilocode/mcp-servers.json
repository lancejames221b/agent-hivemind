{
  "mcpServers": {
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "puppeteer-mcp-server"
      ],
      "env": {
        "PUPPETEER_LAUNCH_ARGS": "--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    },
    "haivemind": {
      "command": "mcp-client-sse",
      "args": [
        "http://{HAIVEMIND_URL}/sse"
      ],
      "env": {
        "HTTP_TIMEOUT": "30000"
      }
    },
    "slack": {
      "command": "mcp-client-sse",
      "args": [
        "http://{SLACK_MCP_URL}/sse"
      ],
      "env": {
        "HTTP_TIMEOUT": "30000"
      }
    },
    "trello": {
      "command": "mcp-client-sse",
      "args": [
        "http://{TRELLO_URL}/sse"
      ],
      "env": {
        "HTTP_TIMEOUT": "30000"
      }
    },
    "notion": {
      "command": "mcp-client-sse",
      "args": [
        "https://mcp.notion.com/sse"
      ],
      "env": {
        "HTTP_TIMEOUT": "30000"
      }
    },
    "atlassian": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "env": {
        "HTTP_TIMEOUT": "30000"
      }
    },
    "vibe_kanban": {
      "command": "npx",
      "args": [
        "-y",
        "vibe-kanban@latest",
        "--mcp"
      ]
    },
    "google-workspace": {
      "command": "{HOME}/.local/bin/uvx",
      "args": [
        "workspace-mcp",
        "--tool-tier",
        "complete"
      ]
    }
  }
}
